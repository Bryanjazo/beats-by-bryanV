
<div class="album py-5 bg-light">
  <div class="container-fluid">
    <div>
    </div><br>
    <div class="row">
      <% @playlists.each do |playlist| %>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <img class="card-img-top" src="<%= playlist.album.images %>" alt="Album Cover">
              <div class="card-body">
                <p class="card-text"><strong><%= playlist.album.name %> - <%= playlist.album.artist.name %></strong></p>
                <p class="card-text">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a class="btn btn-sm btn-outline-secondary" href="<%= album_path(playlist.album) %>">
                        Go to Album
                    </a>
                      <%= button_to "Delete", [playlist.user, playlist], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-secondary" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
  <%= link_to "Create an Album", new_album_path, method: "get" %>
