<% if @album_id %>

<ul>
  <% @album.artists.each do |artist|%>
  <li><%= artist.name%></li>
  <% end %>
</ul>
<img src="<%= @album.images.first['url'] %>" height=500>
<h2><%= @album.name %></h2>
<h4><%= @album.label %></h4>
<h4><%= @album.copyrights %></h4>
<ul class="list-group list-group-flush">
    <% @album.tracks.each do |track| %>
        <li class="list-group-item"><%= track.name %> </li>
    <% end %>
</ul>

<% else %>

<%= render partial: 'albums/album' %>

<% end %>
