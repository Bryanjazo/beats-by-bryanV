    <% @albums.each do |album| %>
      <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img class="card-img-top" src="<%= album.image %>" alt="Album Cover">
            <div class="card-body">
              <p class="card-text"><strong><%= album.name %></strong></p>
              <p class="card-text">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= form_with url: album_path(album), method: 'get' do |f| %>
                  <%= f.hidden_field :album_id, value: album.id %>
                  <%= f.submit "Go to Album", class: "btn btn-sm btn-outline-secondary"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  </div>
</div>
</div>
</div>
